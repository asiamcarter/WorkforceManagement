@model BangazonWorkForceManagement.Models.ViewModels.TrainingProgramIndexViewModel

@{
    ViewData["Title"] = "Index";
}

@if (Model.PastProgram)
{
    <h1>Bangazon Training Programs of the Past</h1>
} else if (!Model.PastProgram)
{
<h1>Bangazon Training Programs</h1>
}

<p>
    <a asp-action="Create">Create New</a> | 
    @if (Model.PastProgram)
    {
    @Html.ActionLink("View  Current Programs", "Index", new { _pastprograms = "false" })
        
    } else if (!Model.PastProgram)
    {
    @Html.ActionLink("View Past Programs", "Index", new { _pastprograms = "true" })
        
    }
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TrainingPrograms[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrainingPrograms[0].StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrainingPrograms[0].EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrainingPrograms[0].MaxAttendees)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.TrainingPrograms)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxAttendees)
            </td>
            @if (!Model.PastProgram)
            {
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            }
            else
            {
                <td>
@Html.ActionLink("Details", "Details", new { id = item.Id })
                </td>
            }
        </tr>
        }
    </tbody>
</table>
