@model BangazonWorkForceManagement.Models.Views.EmployeeDetailViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>EmployeeDetailViewModel</h4>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Department)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Department.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Computer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Computer.Make)
        </dd>
        @if (Model.TrainingProgramList.Count > 0)
        {
            <dt class="col-sm-6">
                @Html.DisplayName("Future Training Programs")
            </dt>

            @foreach (var tp in Model.TrainingProgramList)
            {
                <dd class="col-sm-10">
                    @if (tp.StartDate >= DateTime.Today)
                    {
                        @Html.DisplayFor(model => tp.Name)
                    }

                </dd>
            }
        }

        @if (Model.TrainingProgramList.Count > 0)
        {
            <dt class="col-sm-6">
                @Html.DisplayName("Past Training Programs")
            </dt>

            @foreach (var tp in Model.TrainingProgramList)
            {
                <dd class="col-sm-10">
                    @if (tp.StartDate < DateTime.Today)
                    {
                        @Html.DisplayFor(model => tp.Name)
                    }

                </dd>
            }
        }
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    <a asp-action="Index">Back to List</a>
</div>
