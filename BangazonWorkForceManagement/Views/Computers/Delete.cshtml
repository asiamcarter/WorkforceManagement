@model BangazonWorkForceManagement.Models.ViewModels.ComputerDeleteViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

@if (Model.DisplayDelete == false)
{
    <h3>The computer has been assigned to an employee and can not be deleted.</h3>
}

@if (Model.DisplayDelete == true)
{
    <h3>Are you sure you want to delete this?</h3>
}


<div>
    <h4>ComputerDeleteViewModel</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PurchaseDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PurchaseDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Make)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Make)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Manufacturer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Manufacturer)
        </dd>
    </dl>
    @if (Model.DisplayDelete == true)
    {
        <form asp-action="Delete">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index">Back to List</a>
        </form>
    }

    @if (Model.DisplayDelete == false)
    {
        <form asp-action="Delete">
            <a asp-action="Index">Back to List</a>
        </form>
    }

</div>
